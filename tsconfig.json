{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    // "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@/packages/*": [
        "packages/*"
      ],
      "@/context/*": [
        "context/*"
      ],
      "@/components/*": [
        "components/*"
      ],
    },
    "types": [
      "vitest/importMeta"
    ],
  },
  "include": [
    "./types/**/*.d.ts",
    "./types/@skalenetwork‚ÅÑfilestorage.js.d.ts",
    "src/**/*",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}